  "license": "MIT",
  "files": [
    "dist"
  ],
  "testEnvironment": "node",
  "scripts": {
    "format": "prettier --write \"src/**/*.ts\"",
    "lint": "tslint -p tsconfig.json",
    "build": "tsc",
